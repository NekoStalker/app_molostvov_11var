%h1= t('app.tours.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.tours.new-button'), new_tour_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Tour.human_attribute_name(:route)
      %th= Tour.human_attribute_name(:tdate)
      %th= Tour.human_attribute_name(:days)
      %th= Tour.human_attribute_name(:payment)
      %th= Tour.human_attribute_name(:tdesc)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @tours.each do |tour|
      %tr
        %td= tour.route.rname
        %td= tour.tdate
        %td= tour.days
        %td= tour.payment
        %td= tour.tdesc
        %td
          = link_to tour, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_tour_path(tour), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to tour, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
