= form_for @route do |f|
  - if @route.errors.any?
    #error_explanation
      %h2= "#{pluralize(@route.errors.count, "error")} prohibited this route from being saved:"
      %ul
        - @route.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :rname
    = f.text_field :rname
  .field
    = f.label :city
    = f.text_field :city_id
  .field
    = f.label :rdesc
    = f.text_area :rdesc
  .field
    = f.label :rprice
    = f.number_field :rprice
  .actions
    = f.submit nil, class: 'btn btn-primary'
