%h1= t('app.routes.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.routes.new-button'), new_route_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Route.human_attribute_name(:rname)
      %th= Route.human_attribute_name(:city)
      %th= Route.human_attribute_name(:rdesc)
      %th= Route.human_attribute_name(:rprice)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @routes.each do |route|
      %tr
        %td= route.rname
        %td= route.city.cname
        %td= route.rdesc
        %td= route.rprice
        %td
          = link_to route, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_route_path(route), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to route, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
