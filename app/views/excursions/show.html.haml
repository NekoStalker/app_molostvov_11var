=breadcrumb_tag do
  %li
    Экскурсионные туры
  %li
    = link_to 'Экскурсии', excursions_path
  %li.active
    = @excursion.ename

%h1= @excursion.ename

%dl
  %dt= Excursion.human_attribute_name(:ename)
  %dd= @excursion.ename
  %dt= Excursion.human_attribute_name(:city)
  %dd= @excursion.city.cname
  %dt= Excursion.human_attribute_name(:edesc)
  %dd= @excursion.edesc
  %dt= Excursion.human_attribute_name(:eprice)
  %dd= @excursion.eprice

- if @current_role_user.try(:is_admin?)
  = link_to edit_excursion_path(@excursion), class: 'btn btn-info' do
    = fa_icon :edit
    = t('buttons.edit')
  = link_to @excursion, :method => :delete, :data => { :confirm => t('buttons.confirm.excursion') }, class: 'btn btn-danger' do
    = fa_icon :times
    = t('buttons.destroy')
